generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Cliente {
  id           Int           @id @default(autoincrement())
  nome         String
  endereco     String
  telefone     String
  email        String        @unique
  senha        String
  automoveis   Automovel[]
  transacoes   Transacao[]
  agendamentos Agendamento[]
}

model Automovel {
  id          Int           @id @default(autoincrement())
  modelo      String
  placa       String        @unique
  marca       String
  clienteId   Int          // Adicione este campo para representar a associação com um cliente
  cliente     Cliente      @relation(fields: [clienteId], references: [id])
  Transacao   Transacao[]
  Agendamento Agendamento[]
  
}

model Servico {
  id           Int           @id @default(autoincrement())
  nome         String
  descricao    String
  preco        Decimal
  transacoes   Transacao[]
  agendamentos Agendamento[]
}

model FormaDePagamento {
  id           Int           @id @default(autoincrement())
  nome         String
  transacoes   Transacao[]
  agendamentos Agendamento[]
}

model Transacao {
  id               Int              @id @default(autoincrement())
  clienteId        Int
  servicoId        Int
  automovelId      Int
  formaPagamentoId Int
  dataTransacao    DateTime         @default(now())
  valorTotal       Decimal
  cliente          Cliente          @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  servico          Servico          @relation(fields: [servicoId], references: [id])
  formaPagamento   FormaDePagamento @relation(fields: [formaPagamentoId], references: [id])
  automovel        Automovel        @relation(fields: [automovelId], references: [id])
}

model Agendamento {
  id               Int              @id @default(autoincrement())
  clienteId        Int
  servicoId        Int
  formaPagamentoId Int
  dataTransacao    DateTime         @default(now())
  valorTotal       Decimal
  horarioInicio    DateTime
  horarioTermino   DateTime
  automovelId      Int
  automovel        Automovel        @relation(fields: [automovelId], references: [id])
  cliente          Cliente          @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  servico          Servico          @relation(fields: [servicoId], references: [id])
  formaPagamento   FormaDePagamento @relation(fields: [formaPagamentoId], references: [id])
}
